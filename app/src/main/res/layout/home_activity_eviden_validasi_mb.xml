<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSnowtwo"
    android:orientation="vertical"
    android:padding="@dimen/size_10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/date_validasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_choose"
            android:drawableRight="@drawable/ic_date"
            android:hint="Select Date..."
            android:padding="@dimen/size_5dp"
            android:textColor="@color/colorWhiteCombination"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5dp"
        android:background="@color/colorYelow"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp">

        <TextView
            android:id="@+id/id_running_text_validasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="WARNING ! Batas waktu validasi eviden setiap bulannya adalah tanggal 15 s/d 20   WARNING ! Batas waktu validasi eviden setiap bulannya adalah tanggal 15 s/d 20 "
            android:textColor="@color/colorRed"
            android:textSize="@dimen/size_15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_eviden_validasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="10dp" />
    </LinearLayout>
</LinearLayout>