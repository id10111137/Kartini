<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_title_header_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="4.3.1 Procedur Pelayanan Mutu Dan Bisnis Proses"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_10dp"
            android:stretchColumns="1">


            <TableRow>

                <TextView
                    android:id="@+id/txt_nama_bidang"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:text="Nama Bidang" />

                <TextView
                    android:id="@+id/id_nama_bidang"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:hint="...."
                    android:textStyle="bold" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/txt_nama_unit"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:text="Nama Unit" />

                <TextView
                    android:id="@+id/id_nama_unit"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:hint="...."
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/txt_status_eviden"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Status" />

                <TextView
                    android:id="@+id/id_status"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:hint="...."
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/txt_descripsi"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Deskripsi" />

                <TextView
                    android:id="@+id/id_description"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:hint="...."
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>
    </LinearLayout>





    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/id_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:src="@drawable/ic_linked_camera_black_24dp"
                app:border_color="@color/colorWhiteCombination"
                app:border_width="3dp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/id_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_image_black_24dp"
                app:border_color="@color/colorWhiteCombination"
                app:border_width="3dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/id_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:src="@drawable/ic_cloud_upload"
                app:border_color="@color/colorWhiteCombination"
                app:border_width="3dp" />

        </TableRow>
    </TableLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginBottom="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/line_break"
        android:layerType="software" />

    <ImageView
        android:id="@+id/id_priview_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="@dimen/size_5dp" />

    <TextView
        android:id="@+id/txt_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="File Name PDF"
        android:visibility="gone" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/id_uData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bottom_upload"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_eviden_mb_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/upload"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_15dp" />

    </LinearLayout>


</LinearLayout>